{
  "apps": [
    {
      "name": "horekmart-frontend",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/horekmart-frontend",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001"
      },
      "error_file": "/home/webadmin/.pm2/logs/horekmart-frontend-error.log",
      "out_file": "/home/webadmin/.pm2/logs/horekmart-frontend-out.log",
      "log_file": "/home/webadmin/.pm2/logs/horekmart-frontend-combined.log",
      "time": true,
      "max_restarts": 5,
      "min_uptime": "10s"
    }
  ]
}